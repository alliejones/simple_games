<StrategoBoard>:
    ratio: (1.)


    BoardBackground:
        size_hint_x:10
        ratio: (1.)


    InitialPieces:
        cols:4
        size_hint_x: 4
        ratio: (10/4.)


<BoardBackground>:
    cols:10




<Terrain>:
    source: self.get_background_image()
    on_press: print(self.id)



<GamePiece>:
    id: gamepiece
    player_color: "Red"
    #number: 11
    source: "images/" + self.player_color + "/" + str(self.number) + ".png"


    BoxLayout:
        orientation: "vertical"
        center: gamepiece.center
        size: gamepiece.size

        Label:

        Label:
            text: str(gamepiece.number)
            color: (0,0,0,1)
            font_size: gamepiece.height/3
            bold: True

        Label:
            text: gamepiece.get_name()
            color: (0,0,0,1)
            bold: True

