<GamePiece>:
    id: gamepiece
    orientation: "vertical"
    player_color: "Red"

    Image:
        source: "images/" + gamepiece.player_color + "/" + str(gamepiece.number) + ".png"
        size_hint_y: 3

    Label:
        text: gamepiece.get_name()
        font_size: self.height/2

    Label:
        text: str(gamepiece.number)
        font_size: self.height/4