<StrategoGame>:
    id: window
    gamestate: -1
    on_gamestate: self.change_gamestate()


    BoxLayout:
        Board:
            id: board
            size_hint_x:10

        Sidebar:
            id: sidebar
            cols:4
            size_hint_x: 4

        BoxLayout:
            id: debug
            #change window size back to 1000 when you delete this
            size_hint_x: 2
            orientation: "vertical"

            Button:
                text: "start new game"
                on_press: window.gamestate = 0

            Button:
                text: "place all pieces"
                on_press: window.debug_place_pieces()

            Button:
                text: "gamestate 1"
                on_press: window.gamestate = 1





<Board>:
    cols:10


<Terrain>:
    background_normal: self.get_background_image()
    border: (0,0,0,0)
    id: "test"




<GamePiece>:
    id: gamepiece
    #player_color: "Red"
    background_normal: "images/" + self.player_color + "/" + str(self.number) + ".png"
    border: (0,0,0,0)
    group: self.player_color
    on_pos: self.parent.parent.parent.pieces_are_all_placed()
    #i want to make this happen in python, not set awkwardly like this in kivy



    BoxLayout:
        orientation: "vertical"
        center: gamepiece.center
        size: gamepiece.size
        padding: 0,0

        Label:
            text: gamepiece.get_name()
            color: (0,0,0,1)

            pos_hint_y: .5

        Label:
            text: str(gamepiece.number)
            color: (0,0,0,1)
            font_size: gamepiece.height/3
            bold: True
            pos_hint_y: 0



