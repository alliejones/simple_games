

<StrategoBoard>:
    cols:10
    padding: 0,0



<Terrain>:
    background_normal: self.get_background_image()



<GamePiece>:
    id: gamepiece
    player_color: "Red"
    number: 0


    BoxLayout:
        orientation: "vertical"
        center: gamepiece.center
        size: gamepiece.size

        Image:
            source: "images/" + gamepiece.player_color + "/" + str(gamepiece.number) + ".png"
            size_hint_y: 3

        Label:
            text: gamepiece.get_name()
            font_size: self.height/2

        Label:
            text: str(gamepiece.number)
            font_size: self.height/4