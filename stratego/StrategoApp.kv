<StrategoBoard>:

    BoxLayout:
        BoardBackground:
            size_hint_x:10

        InitialPieces:
            cols:4
            size_hint_x: 4



<BoardBackground>:
    cols:10


<Terrain>:
    background_normal: self.get_background_image()
    on_press: print(self.id)
    border: (0,0,0,0)



<GamePiece>:
    id: gamepiece
    #player_color: "Red"
    background_normal: "images/" + self.player_color + "/" + str(self.number) + ".png"
    border: (0,0,0,0)
    group: self.player_color

    BoxLayout:
        orientation: "vertical"
        center: gamepiece.center
        size: gamepiece.size
        padding: 0,0

        Label:
            text: gamepiece.get_name()
            color: (0,0,0,1)

            pos_hint_y: .5

        Label:
            text: str(gamepiece.number)
            color: (0,0,0,1)
            font_size: gamepiece.height/3
            bold: True
            pos_hint_y: 0



