<StrategoGame>:
    id: window
    gamestate: -1
    on_gamestate: self.change_gamestate()


    BoxLayout:
        GameBoard:
            id: board
            size_hint_x:10

        SideBoard:
            id: sidebar
            size_hint_x: 4

        BoxLayout:
            id: debug
            #change window size back to 1000 when you delete this
            size_hint_x: 2
            orientation: "vertical"

            Button:
                text: "start new game"
                on_press: window.gamestate = 0

            Button:
                text: "place all pieces"
                on_press: window.debug_place_pieces()

            Button:
                text: "gamestate 1"
                on_press: window.gamestate = 1





<Square>:
    background_normal: self.get_background_image()
    background_disabled_normal: self.get_disabled_image()
    border: (0,0,0,0)
    on_press: self.move_to_square()



<GamePiece>:
    id: gamepiece
    background_normal: "images/" + self.player_color + "/" + str(self.number) + ".png"
    border: (0,0,0,0)
    size_hint:(None, None)
    group: self.player_color


    on_spot: self.pos = self.spot.pos
    on_press: self.parent.place_in_hand(self)




    BoxLayout:
        orientation: "vertical"
        center: gamepiece.center
        on_size: self.size = gamepiece.size


        Label:
            text: str(gamepiece.number)
            color: (0,0,0,1)
            font_size: gamepiece.height/3
            bold: True
            #pos_hint_y: .9

        Label:
            text: gamepiece.get_name()
            bold: True
            font_size: gamepiece.width/4.5
            color: (0,0,0,1)

            #pos_hint_y: .2






