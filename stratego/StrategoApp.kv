

<StrategoBoard>:
    cols:10
    padding: 0,0



<Terrain>:
    background_normal: self.get_background_image()



<GamePiece>:
    id: gamepiece
    player_color: "Red"
    number: 11
    background_normal: "images/" + self.player_color + "/" + str(self.number) + ".png"


    BoxLayout:
        orientation: "vertical"
        center: gamepiece.center
        size: gamepiece.size

        Label:

        Label:
            text: str(gamepiece.number)
            color: (0,0,0,1)
            font_size: gamepiece.height/3
            bold: True

        Label:
            text: gamepiece.get_name()
            color: (0,0,0,1)
            bold: True

