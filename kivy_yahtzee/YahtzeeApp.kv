<YahtzeeGame>:
    id: game
    
    BoxLayout:
        orientation: "vertical"
        size_hint_x: 2

        DiceLayer:
            id: dice_layer
            size_hint_y: 3
            
            Dice:
                id: dice1
            Dice:
                id: dice2
            Dice:
                id: dice3
            Dice:
                id: dice4
            Dice:
                id: dice5

        RollButton:
            id: actionbutton
            text: "Roll"
            size: 200,50
            on_press: game.change_game_state()

    ScoreCard:
        orientation: "vertical"
                    

<ScoreCard>:
    id: scorecard            


<ScoreOption>:
    id: scoreoption
    # id will be overwritten
    value: 0

    ToggleButton:
        size_hint_x: 2
        id: button
        text: scoreoption.id
        group: "score_options_group"
    Label:
        id: score_number
        text: str(scoreoption.value)
                
            
