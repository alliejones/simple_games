<YahtzeeGame>:
    BoxLayout:
        id: game
        orientation: "vertical"
        size_hint_x: 2

        DiceLayer:
            id: dice_layer
            size_hint_y: 3
            
            Dice:
                id: dice1
            Dice:
                id: dice2
            Dice:
                id: dice3
            Dice:
                id: dice4
            Dice:
                id: dice5

        RollButton:
            text: "Roll"
            size: 200,50
            font_size: 20
            on_press: dice_layer.roll_all_dice()

    ScoreCard:
                    
            
<ScoreCard>:
    id: scorecard
    orientation: "vertical"
    


<ScoreOption>:
    id: scoreoption
    text: "will be reset"
    value: 0
    
    ToggleButton:
        size_hint_x: 2
        id: button
        text: scoreoption.text
        group: "score_options_group"
    Label:
        id: score_number
        text: str(scoreoption.value)
                
            
