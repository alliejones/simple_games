<YahtzeeGame>:
    id: game
    gamestate: 0
    on_gamestate: self.change_game_state()
    instructions: "Start your game!"

    BoxLayout:
        orientation: "vertical"
        size_hint_x: 2

        DiceLayer:
            id: dicelayer
            size_hint_y: 3

        Label:
            text: "Game State: " + str(game.gamestate)



        DoTheThingButton:
            id: actionbutton
            text: game.instructions
            size: 200,50
            on_press: game.increment_game_state()

    ScoreCard:
        id: scorecard 
        orientation: "vertical"



<Dice>:
    number: 6
    source: "images/up_state/dice" + str(self.number) + ".gif"
    padding: 0,0
    disabled: True

       
                    

<ScoreCard>:
               


<ScoreOption>:
    id: scoreoption
    # id will be overwritten
    value: 0
    used: False
    disabled: True
    on_used: self.italicize_text()


    ToggleButton:
        id: button
        size_hint_x: 2
        markup: True
        text: self.parent.id
        group: "score_options_group"
        on_press: self.parent.parent.parent.gamestate = 4
        #I don't like this, but it won't let me do root???
        disabled: scoreoption.disabled
        
    Label:
        id: score_number
        text: str(scoreoption.value)
        disabled: scoreoption.disabled





                
            
