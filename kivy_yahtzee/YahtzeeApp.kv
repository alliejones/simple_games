<YahtzeeGame>:
    id: game
    gamestate: 0
    on_gamestate: self.change_game_state()

    BoxLayout:
        orientation: "vertical"
        size_hint_x: 2

        DiceLayer:
            id: dice_layer
            size_hint_y: 3
            
            Dice:
                id: dice1
            Dice:
                id: dice2
            Dice:
                id: dice3
            Dice:
                id: dice4
            Dice:
                id: dice5
        Label:
            text: "Game State: " + str(game.gamestate)

        RollButton:
            id: actionbutton
            text: "Roll"
            size: 200,50
            on_press: game.increment_game_state()

    ScoreCard:
        id: scorecard 
        orientation: "vertical"


