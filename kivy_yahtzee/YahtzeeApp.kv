<YahtzeeGame>:
    id: game

    BoxLayout:
        orientation: "vertical"
        size_hint_x: 2

        DiceLayer:
            id: dice_layer
            size_hint_y: 3
            
            Dice:
                id: dice1
            Dice:
                id: dice2
            Dice:
                id: dice3
            Dice:
                id: dice4
            Dice:
                id: dice5

        RollButton:
            id: actionbutton
            text: "Roll"
            size: 200,50
            on_press: game.change_game_state()

    ScoreCard:
        id: scorecard 
        orientation: "vertical"

        
                    

<ScoreCard>:
               


<ScoreOption>:
    id: scoreoption
    # id will be overwritten
    value: 0

    ToggleButton:
        id: button
        size_hint_x: 2
        text: scoreoption.id
        group: "score_options_group"
        on_press: self.parent.parent.parent.unlock()
        #I don't like this, but it won't let me do root???
    Label:
        id: score_number
        text: str(scoreoption.value)
                
            
